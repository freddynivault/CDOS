{% extends 'base.html.twig' %}

{% block title %}Hello PagesController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <script>
        function showUser(){
            var selectBox =document.getElementById('user');
            var userInput =selectBox.options[selectBox.selectedIndex].value;

            if (userInput =='candidat'){
                //document.getElementById('formCandidat').style.visibility='visible';
                //document.getElementById('formAdminS').style.visibility='hidden';
                document.getElementById('formCandidat').style.display='flex';
                document.getElementById('formAdminS').style.display='none';
                document.getElementById('formSAdmin').style.display='none';
            }
            else if (userInput =='adminS'){
                //document.getElementById('formAdminS').style.visibility='visible';
                //document.getElementById('formCandidat').style.visibility='hidden';
                document.getElementById('formAdminS').style.display='flex';
                document.getElementById('formCandidat').style.display='none';
                document.getElementById('formSAdmin').style.display='none';
            }
            else if (userInput =='Sadmin'){
                //document.getElementById('formAdminS').style.visibility='visible';
                //document.getElementById('formCandidat').style.visibility='hidden';
                document.getElementById('formSAdmin').style.display='flex';
                document.getElementById('formCandidat').style.display='none';
                document.getElementById('formAdminS').style.display='none';
            }
            return false;


        }
    </script>
    <form>
        <div class="col-sm-4 col-xs-12">
            <div class="form-group">
                <h1>Créer un compte</h1>
                <label for="user">Choisissez le type d'utilisateur</label>
                <div class="inputs">
                    <select name="user" id="user" onchange="return showUser();">
                        <option value="candidat">Candidat</option>
                        <option value="adminS">Admin Structure</option>
                        <option value="Sadmin">Super Admin</option>
                    </select>
                    <div id="formCandidat" class="formCandidat">
                        <input type="text" placeholder="Prenom" />
                        <input type="text" placeholder="Nom">
                        <input type="email" placeholder="Email" />
                        <input type="password" placeholder="Mot de passe">
                        <input type="password" placeholder="Confirmer votre mot de passe">
                    </div>

                    <div id="formAdminS" class="formAdminS">
                        <input type="text" placeholder="Nom de la structure" />
                        <input type="text" placeholder="Description">
                        <input type="email" placeholder="Email" />
                        <label for="logo">Déposez votre logo : </label>
                        <input type="file" id="logo"/>
                        <input type="password" placeholder="Mot de passe">
                        <input type="password" placeholder="Confirmer votre mot de passe">
                    </div>

                    <div id="formSAdmin" class="formSAdmin">
                        <input type="text" placeholder="Nom" />
                        <input type="text" placeholder="Prenom">
                        <input type="email" placeholder="Email" />
                        <input type="password" placeholder="Mot de passe">
                        <input type="password" placeholder="Confirmer votre mot de passe">
                    </div>
                </div>

                <div align="center">
                    <button type="submit">Créer un compte</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
