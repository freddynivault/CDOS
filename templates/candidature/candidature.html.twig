{% extends 'base.html.twig' %}

{% block title %}Hello PagesController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styledrag2.css') }}">{% endblock %}
{% block body %}
    <link rel="stylesheet" href="public/css/bootstrap.min.css">

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <!--- Candidature -->

    <section class="home py-1 bg-light" id="job_présentation">
        <div class="container-lg">
            <div class="row align-items-center align-content-center">
                <div class="col-md-6 mt-5 mt-md-0 order-md-first">
                    <div class="home-text">
                        <h1 class="text-danger text-uppercase fs-1 fw-bold">Candidature pour l'offre : {{ candidature.offer.titre }} </h1>

                        <h2 class="fs-4">Nom de la structure : </h2>
                        {{ candidature.offer.nomStructure }}
                    </div>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </section>
    <hr class="my-4">

    <!--- Information sur le candidat -->

    <section class="about bg-white" id="about">
        <div class="container-lg py-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="section-title">
                        <h2 class="fw-bold mb-5">Information sur le candidat</h2>
                        <p class="text-muted"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="section-title">
                        <h2 class="fw-bold mb-5">Commentaires</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="about-text" >
                        <h3 class="fs-5">Nom du candidat</h3>
                        <p class="text-muted">{{ candidature.user.lastName }}</p>
                    </div>
                    <div class="about-text">
                        <h3 class="fs-5">Prenom du candidat</h3>
                        <p class="text-muted">{{ candidature.user.firstName }}</p>
                    </div>
                    <div class="about-text">
                        <h3 class="fs-5">Email</h3>
                        <p class="text-muted">{{ candidature.user.email }}</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-text">
                        <div class="row">
                                <p class="text-muted">{{ candidature.commentaire }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr class="my-4">

    <!--- Téléchargement du CV et lettre de motivation--->

    <section class="about bg-white" id="about">
        <div class="container-lg py-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="section-title" align="center">
                        <h2 class="fw-bold mb-5">Télécharger le CV</h2>
                        <p class="text-muted"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="section-title" align="center">
                        <h2 class="fw-bold mb-5">Télécharger la lettre de motivation</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col" align="center">
                        {% set test = 'uploads/pdf_file/' ~ candidature.CV %}
                        <a class="btn btn-download text-danger" href="{{ asset(test) }}"
                           download="{{ 'CV - '~ candidature.user.firstName ~ '-'~ candidature.user.lastName }}.pdf">
                            <abbr title="Télécharger le CV en PDF"><h1><i class="bi bi-file-earmark-pdf-fill"></i>
                                </h1></abbr>
                        </a>

                </div>
                <div class="col" align="center">
                        {% set test = 'uploads/pdf_file/' ~ candidature.lettreMotivation %}
                        <a class="btn btn-download text-danger" href="{{ asset(test) }}"
                           download="{{ 'LM - '~ candidature.user.firstName ~ '-'~ candidature.user.lastName }}.pdf">
                            <abbr title="Télécharger la lettre de motivation en PDF"><h1><i class="bi bi-file-earmark-pdf-fill"></i>
                                </h1></abbr>
                        </a>
                </div>
            </div>
        </div>
    </section>




    <script src="assets/bootstrap.bundle.min.js"></script>

{% endblock %}
