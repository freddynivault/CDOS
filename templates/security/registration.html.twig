{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {{ form_start(form) }}
    {{ form_row(form.userType, {'attr': {'placeholder': 'sélectionnez le type d\'utilisateur'}}) }}
    {{ form_row(form.firstName, {'attr': {'placeholder': 'Prenom'}}) }}
    {{ form_row(form.lastName, {'attr': {'placeholder': 'Nom'}}) }}
    {{ form_row(form.email, {'attr': {'placeholder': 'Email'}}) }}
    {{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirmPassword, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
    <button type="submit">Créer un compte</button>
    {{ form_end(form) }}
{% endblock %}